{
	"name": "waiwaichan",
	"version": "1.0.0",
	"description": "",
	"main": "app.js",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"prd:backend": "node dist/app.js",
		"prd:scheduler": "node dist/scheduler.js",
        "dev:backend": "tsx watch src/app.ts",
        "dev:scheduler": "tsx watch src/scheduler.ts",
        "migrate:up": "node dist/migrator/migrator.js up",
        "seed:up": "node dist/migrator/seeder.js up",
        "datafix:up": "node dist/migrator/datafixer.js up",
        "migrate:down": "node dist/migrator/migrator.js down",
        "seed:down": "node dist/migrator/seeder.js down",
        "datafix:down": "node dist/migrator/datafixer.js down",
        "migrateAll:up": "node dist/migrator/migrator.js up && node dist/migrator/seeder.js up && node dist/migrator/datafixer.js up",
		"migrateAll:down": "node dist/migrator/migrator.js down && node dist/migrator/seeder.js down && node dist/migrator/datafixer.js down",
        "test": "mocha --import=@swc-node/register/esm-register",
        "test:coverage": "c8 pnpm test",
        "lint": "biome check --write && biome format --write",
        "lint:unsafe": "biome check --write --unsafe && biome format --write"
    },
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@abraham/reflection": "^0.12.0",
		"@google-cloud/compute": "^4.12.0",
		"@octokit/app": "^15.1.6",
		"@octokit/core": "^6.1.6",
		"@swc-node/register": "^1.11.1",
		"@types/chai": "^5.2.3",
		"@types/cls-hooked": "^4.3.9",
		"@types/mocha": "^10.0.10",
		"await-semaphore": "^0.1.3",
		"chai": "^5.3.3",
		"chai-diff": "^1.0.2",
		"cls-hooked": "^4.2.2",
		"dayjs": "^1.11.19",
		"deepl-node": "^1.21.0",
		"discord-api-types": "^0.37.120",
		"discord.js": "^14.24.2",
		"dotenv": "^16.6.1",
		"inversify": "^6.2.2",
		"mocha": "^11.7.5",
		"moment": "^2.30.1",
		"mysql2": "^3.15.3",
		"node-cron": "^3.0.3",
		"openai": "^4.104.0",
		"pino": "^9.14.0",
		"pino-pretty": "^13.1.2",
		"reflect-metadata": "^0.2.2",
		"sequelize": "^6.37.7",
		"sequelize-typescript": "^2.1.6",
		"ts-mockito": "^2.6.1",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3",
		"umzug": "^3.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@octokit/types": "^13.10.0",
		"@swc/core": "^1.15.0",
		"@testcontainers/mysql": "^10.28.0",
		"@types/node": "^22.19.0",
		"@types/node-cron": "^3.0.11",
		"c8": "^10.1.3",
		"swc-plugin-coverage-instrument": "^0.0.25",
		"testcontainers": "^10.28.0",
		"tsx": "^4.20.6"
	},
	"mocha": {
		"diff": true,
		"extension": [
			"ts"
		],
		"package": "./package.json",
		"reporter": "spec",
		"slow": "75",
		"timeout": "10000",
		"ui": "bdd",
		"watch-files": [
			"lib/**/*.js",
			"test/**/*.js"
		],
		"watch-ignore": [
			"lib/vendor"
		],
		"spec": "tests/**/*.test.ts"
	},
	"c8": {
		"reporter": [
			"text-summary",
			"html",
			"lcov"
		],
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"src/logics/Interfaces/**/*.ts",
			"src/entities/dto/**/*.ts",
			"src/entities/vo/**/*.ts",
			"src/entities/constants/**/*.ts",
			"src/entities/config/**/*.ts"
		],
		"all": true,
		"source-map": true
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@swc/core",
			"cpu-features",
			"esbuild",
			"protobufjs",
			"ssh2"
		]
	},
	"swc": {
		"$schema": "https://swc.rs/schema.json",
		"jsc": {
			"baseUrl": "./",
			"paths": {
				"@/*": [
					"./*"
				],
				"@config/*": [
					"config/*"
				]
			},
			"parser": {
				"syntax": "typescript",
				"decorators": true,
				"dynamicImport": true
			},
			"transform": {
				"useDefineForClassFields": true
			},
			"target": "es2022",
			"experimental": {
				"emitAssertForImportAttributes": true
			}
		},
		"module": {
			"type": "es6"
		},
		"sourceMaps": true
	}
}
